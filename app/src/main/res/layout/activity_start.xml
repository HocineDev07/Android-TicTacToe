<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/image_background"
    tools:context=".StartActivity">

    <TextView
        android:id="@+id/text_tic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/creepster"
        android:text="Tic"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="90sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_tac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_tic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:fontFamily="@font/creepster"
        android:text="Tac"
        android:textColor="@android:color/holo_green_light"
        android:textSize="90sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_toe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_tac"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:fontFamily="@font/creepster"
        android:text="Toe"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="90sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editPlayer1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_toe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/dialog_bg"
        android:gravity="center_horizontal"
        android:hint="@string/txt_player_1"
        android:textColor="@color/black"
        android:textColorHint="@android:color/secondary_text_light_nodisable"
        android:textSize="22sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editPlayer2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPlayer1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/dialog_bg"
        android:gravity="center_horizontal"
        android:hint="@string/txt_player_2"
        android:textColor="@color/black"
        android:textColorHint="@android:color/secondary_text_light_nodisable"
        android:textSize="22sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_play"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/editPlayer2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/anton"
        android:text="Play"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="26sp"/>

</RelativeLayout>